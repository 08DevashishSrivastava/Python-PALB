class Solution:
    def minJumps(self, arr):
        n = len(arr)

        # If the array has only one element
        if n == 1:
            return 0

        # If first element is 0, we cannot move
        if arr[0] == 0:
            return -1

        maxReach = arr[0]
        steps = arr[0]
        jumps = 1

        for i in range(1, n):
            # If we've reached the end
            if i == n - 1:
                return jumps

            # Update maxReach
            maxReach = max(maxReach, i + arr[i])
            steps -= 1

            # If no more steps left
            if steps == 0:
                jumps += 1

                # If we cannot move further
                if i >= maxReach:
                    return -1

                # Reinitialize steps
                steps = maxReach - i

        return -1
